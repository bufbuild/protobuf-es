    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest"
  },
  "type": "module",
  "dependencies": {
    "upstream-protobuf": "*",
    "@bufbuild/protoplugin": "2.0.0-beta.1"
  }
}
