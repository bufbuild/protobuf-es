{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["../../biome.base.json"],
  "files": {
    "ignore": ["dist", "src/wkt/gen"]
  },
  "linter": {
    "rules": {
      "performance": {
        "useTopLevelRegex": "error"
      }
    }
  },
  "overrides": [
    {
      "include": ["scripts"],
      "linter": {
        "rules": {
          "performance": {
            "useTopLevelRegex": "off"
          }
        }
      }
    }
  ]
}
