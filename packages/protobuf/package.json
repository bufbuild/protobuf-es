{
  "name": "@bufbuild/protobuf",
  "version": "1.8.0",
  "license": "(Apache-2.0 AND BSD-3-Clause)",
  "description": "A complete implementation of Protocol Buffers in TypeScript, suitable for web browsers and Node.js.",
  "repository": {
    "type": "git",
    "url": "https://github.com/bufbuild/protobuf-es.git",
    "directory": "packages/protobuf"
  },
  "scripts": {
    "clean": "rm -rf ./dist/*",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "../../node_modules/typescript/bin/tsc --project tsconfig.json --module commonjs --verbatimModuleSyntax false --moduleResolution node10 --outDir ./dist/cjs --declaration --declarationDir ./dist/cjs && echo >./dist/cjs/package.json '{\"type\":\"commonjs\"}'",
    "build:esm": "../../node_modules/typescript/bin/tsc --project tsconfig.json --outDir ./dist/esm --declaration --declarationDir ./dist/esm",
    "bootstrap:inject": "node scripts/bootstrap-inject.mjs src",
    "prebootstrap:wkt": "rm -rf .tmp && mkdir -p .tmp/v2 && cp -rp src/next/wkt/gen/* .tmp/v2",
    "bootstrap:wkt": "protoc --es-next_out=src/next/wkt/gen --es-next_opt=bootstrap_wkt=true,target=ts --proto_path $(upstream-include wkt) $(upstream-files wkt) && license-header src/next/wkt/gen",
    "postbootstrap:wkt": "diff >/dev/null -r .tmp/v2 src/next/wkt/gen && cp -rp .tmp/v2/* src/next/wkt/gen || true",
    "attw": "attw --pack"
  },
  "type": "module",
  "sideEffects": false,
  "main": "./dist/cjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./next": {
      "import": "./dist/esm/next/index.js",
      "require": "./dist/cjs/next/index.js"
    },
    "./next/codegenv1": {
      "import": "./dist/esm/next/codegenv1/index.js",
      "require": "./dist/cjs/next/codegenv1/index.js"
    },
    "./next/reflect": {
      "import": "./dist/esm/next/reflect/index.js",
      "require": "./dist/cjs/next/reflect/index.js"
    },
    "./next/wkt": {
      "import": "./dist/esm/next/wkt/index.js",
      "require": "./dist/cjs/next/wkt/index.js"
    },
    "./next/wire": {
      "import": "./dist/esm/next/wire/index.js",
      "require": "./dist/cjs/next/wire/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "next": [
        "./dist/cjs/next/index.d.ts"
      ],
      "next/codegenv1": [
        "./dist/cjs/next/codegenv1/index.d.ts"
      ],
      "next/reflect": [
        "./dist/cjs/next/reflect/index.d.ts"
      ],
      "next/wkt": [
        "./dist/cjs/next/wkt/index.d.ts"
      ],
      "next/wire": [
        "./dist/cjs/next/wire/index.d.ts"
      ]
    }
  },
  "devDependencies": {
    "upstream-protobuf": "*"
  },
  "files": [
    "dist/**"
  ]
}
