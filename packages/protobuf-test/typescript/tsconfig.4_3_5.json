{
  "include": ["../src/**/*"],
  // These are the default compiler options for TypeScript v4.3.5,
  // created with `tsc --init`
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true
  }
}
