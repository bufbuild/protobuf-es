{
  "include": ["src/**/*.ts", "test/*.ts"],
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "Node16",
    "module": "Node16",
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true
  }
}
